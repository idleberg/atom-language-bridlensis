{
  "name": "language-bridlensis",
  "version": "5.0.1",
  "description": "Atom language support for BridleNSIS, including grammar, snippets and build system",
  "license": "MIT OR GPL-2.0",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint:coffee": "eslint --fix ./src/*.coffee",
    "lint:cson": "eslint --fix ./grammars/*.cson ./keymaps/*.cson ./snippets/*.cson",
    "lint": "npm-run-all --parallel lint:*",
    "test": "npm run lint"
  },
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "keywords": [
    "bridlensis",
    "nsis",
    "nullsoft",
    "installer",
    "setup"
  ],
  "repository": "https://github.com/idleberg/atom-language-bridlensis",
  "main": "lib/main",
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "package-deps": [
    "language-nsis"
  ],
  "activationCommands": {
    "atom-workspace": [
      "BridleNSIS:save-&-transpile"
    ]
  },
  "consumedServices": {
    "console-panel": {
      "versions": {
        "^1.0.0": "consumeConsolePanel"
      }
    }
  },
  "dependencies": {
    "atom-package-deps": "^5.1.0"
  },
  "devDependencies": {
    "coffeescript": "^2.5.1",
    "eslint": "^7.32.0",
    "eslint-plugin-coffee": "^0.1.14",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "lint-staged": {
    "*.(coffee|cson|json)": "eslint --cache --fix"
  }
}
